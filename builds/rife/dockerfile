FROM nvidia/cuda:12.4.0-runtime-ubuntu20.04

ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=Etc/UTC
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

RUN apt-get update --fix-missing && apt-get install -y --no-install-recommends \
    python3 python3-pip python3-dev git ffmpeg unzip \
    libgl1 libsm6 libxext6 libglvnd-dev libxrender-dev && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY req.txt .
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r req.txt

COPY . .

RUN unzip train_log.zip && rm train_log.zip

ENV FLASK_APP=server_interpolation.py
ENV FLASK_ENV=production
EXPOSE 5000

CMD ["python3", "server_interpolation.py"]