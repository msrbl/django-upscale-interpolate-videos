FROM nvidia/cuda:12.4.0-base-ubuntu20.04 AS builder

ENV DEBIAN_FRONTEND=noninteractive \
    TZ=Etc/UTC \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

RUN apt-get update --fix-missing && \
    apt-get install -y --no-install-recommends \
        software-properties-common && \
    add-apt-repository ppa:deadsnakes/ppa && \
    apt-get update && \
    apt-get install -y --no-install-recommends \
        python3.11 \
        python3.11-dev \
        python3.11-distutils \
        ffmpeg \
        git && \
    update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.11 1 && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    python3.11 -m ensurepip --upgrade && \
    ln -s /usr/local/bin/pip /usr/bin/pip && \
    ln -s /usr/local/bin/pip3 /usr/bin/pip3

WORKDIR /app

COPY requirements.txt .
RUN python3 -m pip install --upgrade pip && \
    python3 -m pip install --no-cache-dir \
        torch==2.1.1 \
        torchvision==0.16.1 \
        torchaudio==2.1.1 \
        --index-url https://download.pytorch.org/whl/cu118

RUN git clone https://github.com/xinntao/BasicSR.git && \
    cd BasicSR && \
    python3 -m pip install --no-cache-dir -e . && \
    cd .. && \
    rm -rf BasicS

RUN python3 -m pip install --no-cache-dir -r requirements.txt
    
COPY ./src/ ./src/
COPY server_upscale.py .

FROM nvidia/cuda:12.4.0-base-ubuntu20.04

ENV DEBIAN_FRONTEND=noninteractive \
    TZ=Etc/UTC \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

COPY --from=builder /usr/lib/python3.11 /usr/lib/python3.11
COPY --from=builder /usr/local/lib/python3.11/dist-packages /usr/local/lib/python3.11/dist-packages
COPY --from=builder /usr/bin/python3.11 /usr/bin/python3.11
COPY --from=builder /usr/bin/python3 /usr/bin/python3
COPY --from=builder /usr/local/bin /usr/local/bin
COPY --from=builder /app /app

RUN apt-get update --fix-missing && \
    apt-get install -y --no-install-recommends \
        ffmpeg && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

ENV NVIDIA_VISIBLE_DEVICES=all \
    NVIDIA_DRIVER_CAPABILITIES=compute,utility \
    FLASK_APP=server_upscale.py \
    FLASK_ENV=production

EXPOSE 5001
CMD ["python3", "server_upscale.py"]
